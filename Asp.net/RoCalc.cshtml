                <td>
                    @Html.TextBox("ba", GetParam("ba"), new { size = "12" })
                    mg/L </td>
                <td>氯化物 (Cl<sup>-</sup>)</td>
                <td>
                    @Html.TextBox("cl02", GetParam("cl02"), new { size = "12" })
                    mg/L </td>
            </tr>
            <tr>
